# 1. Starte Notepad
Start-Process notepad
Start-Sleep -Seconds 1

# 2. Schließe Notepad über den Prozessnamen
Get-Process notepad | Stop-Process -Force
Start-Sleep -Seconds 1

# 3. Starte Notepad erneut
Start-Process notepad
Start-Sleep -Seconds 1

# 4. Schreibe "Hallo Welt" in Notepad
# Erzeuge COM-Objekt für Tastatureingabe
$wshell = New-Object -ComObject wscript.shell
Start-Sleep -Milliseconds 500
$wshell.AppActivate("Unbenannt - Editor")  # Wichtig: Fenstername muss passen!
Start-Sleep -Milliseconds 500
$wshell.SendKeys("Hallo Welt")
